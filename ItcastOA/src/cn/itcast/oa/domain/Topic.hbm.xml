<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.itcast.oa.domain">

	<class name="Topic" table="itcast_topic">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="title" type="text" length="65536" />
		<property name="content" type="text" length="65536"/>
		<property name="postTime" type="timestamp" />
		<property name="ipAddr" />

		<property name="type" />
		<property name="replyCount" />
		<property name="lastUpdateTime" type="timestamp" />


		<!-- author属性 本类与User表之间的多对一的关系 -->
		<many-to-one name="author" class="User" column="authorId"></many-to-one>
		<!-- forum属性 本类与Forum表之间的多对一的关系 -->
		<many-to-one name="forum" class="Forum" column="forumId"></many-to-one>

		<!-- lastReply属性 本类与Reply表之间的一對一的关系 采用本方有外键的一对一关系 本方有外键 -->
		<many-to-one name="lastReply" class="Reply" column="lastReplyId"
			unique="true"></many-to-one>

		<!-- replies属性 本类与Reply表之间的一對多的关系 -->
		<set name="replies">
			<key column="topicId"></key>
			<one-to-many class="Reply" />
		</set>


	</class>

</hibernate-mapping>
